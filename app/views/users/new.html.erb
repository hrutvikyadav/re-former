<h1> Hi from new </h1>

=begin
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<form accept-charset="UTF-8" action="/users" method="post">
    <label for="username">username:</label>
    <input id="username" name="user[username]" type="text" />

    <label for="email">email:</label>
    <input id="email" name="user[email]" type="text" />

    <label for="password">password:</label>
    <input id="password" name="user[password]" type="password" />

    <input type="submit" value="Submit">
</form>
=end

=begin
<%= form_tag('/users') do %>
    <%= label_tag 'username', 'Enter your u-name' %>
    <%= text_field_tag :username%>
    <%= label_tag 'email', 'Enter your email' %>
    <%= text_field_tag :email%>
    <%= label_tag 'password', 'Enter your password' %>
    <%= password_field_tag :password %>
    <%= submit_tag :submit %>
<% end%>
=end

<%= form_with model: @user do |form| %>
    <%= form.text_field :username %>
    <%= form.text_field :email %>
    <%= form.password_field :password %>
    <%= form.submit :Submit! %>
<% end %>
